{{#unless book.modoLecturaSimple}}
    <Toggle class="simple-read" @element-id="simple-read-slider" @tooltip={{if (compute (action shouldShowSimpleRead)) (t "components.simpleReadToggle.disable") (t "components.simpleReadToggle.enable")}} @isChecked={{compute (action shouldShowSimpleRead)}} @onToggle={{action 'toggleSimpleRead'}}>
        <b class="simple-read-icon">
          {{#if (compute (action shouldShowSimpleRead))}}
            A
          {{else}}
            a
          {{/if}}
        </b>
    </Toggle>
{{/unless}}