{{#unless this.isHidden}}
    <div class={{this.class}}>
        <Button 
            @isDisabled={{this.isDisabled}}
            @isFab={{this.isMini}} 
            @isMini={{this.isMini}}
            @isRaised={{this.isMini}}
            @element-id={{this.element-id}}
            @tooltip={{this.tooltip}}
            @onClick={{this.onClick}}
            >
                {{#if this.icon}}
                    {{paper-icon this.icon}}
                {{else}}
                    {{#if faIcon}}
                        <i class={{faIcon}}></i>
                    {{/if}}
                {{/if}}

                {{#unless this.isMini}} 
                    <span class="button-typography">{{this.label}}</span>
                {{/unless}}
        </Button>
    </div>
{{/unless}}