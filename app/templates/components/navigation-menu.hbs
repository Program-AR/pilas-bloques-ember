<PaperMenu @offset="5 43" as |menu|>
    
    <menu.trigger>
        <RPaperButton id="navigation-menu" class="md-menu-origin" @iconButton={{true}}>
            {{paper-icon "menu"}}
        </RPaperButton>
    </menu.trigger>
    
    <menu.content as |content|>

        {{#if this.book}}
            {{!-- Challenge book --}}
                <content.menu-item>
                    <RPaperButton 
                        @disabled={{false}} 
                        @raised={{false}} 
                        @fab={{false}}
                        @bubbles={{true}}
                        @href={{href-to "libros.verLibro" this.book.id}}>
                        <span class="menu-item-typography">{{this.book.titulo}}</span>
                    </RPaperButton>
                </content.menu-item>

                {{!-- Challenge chapter --}}
                <content.menu-item>
                    <RPaperButton 
                        @disabled={{false}} 
                        @raised={{false}} 
                        @fab={{false}} 
                        @bubbles={{true}}
                        @href={{href-to "libros.verLibro" this.book.id}}>
                        <span class="menu-item-typography">{{this.chapter.titulo}}</span>
                    </RPaperButton>
                </content.menu-item>

                {{!-- Challenge group --}}
                {{#if this.challenge.grupo.titulo}}
                    <content.menu-item>
                        <RPaperButton 
                            @disabled={{false}}
                            @raised={{false}}
                            @fab={{false}}
                            @bubbles={{true}}
                            @href={{href-to "libros.verLibro" this.book.id}}>
                            <span class="menu-item-typography">{{this.group.titulo}}</span>
                        </RPaperButton>
                    </content.menu-item>
                {{/if}}
            {{/if}}
            
            {{!-- Challenge title --}}
            <content.menu-item>
                <RPaperButton 
                    @disabled={{false}}
                    @raised={{false}}
                    @fab={{false}}
                    @bubbles={{true}}
                    >
                    <span class="menu-item-typography challenge-title">{{this.challenge.titulo}}</span>
                </RPaperButton>
            </content.menu-item>

        </menu.content>
</PaperMenu>