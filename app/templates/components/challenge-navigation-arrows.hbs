{{#if this.challenge.previousChallenge}}
    {{!-- Previous challenge --}}
  <ButtonToChallenge id='previous-challenge-arrow' @challenge={{this.challenge.previousChallenge}}>{{paper-icon "keyboard_double_arrow_left"}}</ButtonToChallenge>
{{/if}}

{{#if this.challenge.nextChallenge}}
    {{!-- Next challenge --}}
    <ButtonToChallenge id='next-challenge-arrow' @challenge={{this.challenge.nextChallenge}}>{{paper-icon "keyboard_double_arrow_right"}}</ButtonToChallenge>
{{/if}}