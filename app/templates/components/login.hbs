<div class="login">
  <div class="login-item">
    <h3>{{t "components.login.already"}}</h3>
  <PaperForm @onSubmit={{action "doLogin"}} as |form|>
    <PbInput @label="Usuario"
      @model={{ credentials.username }} 
      @required={{ true }} />

    <PbInput @type="password" @label="ContraseÃ±a"
      @model={{ credentials.password }} 
      @required={{ true }} />

    {{#if wrongLogin}}
      <PaperCard as |card|>
        <card.title as |title|>
          <title.text as |text|>
            <p>{{t "components.login.wrong"}}</p>
          </title.text>
        </card.title>
      </PaperCard>
    {{/if}}

    <ProgressButton type="submit" @loading={{ pilasBloquesApi.loading.login }}>
      {{t "components.login.login"}}
    </ProgressButton>
  </PaperForm>

  <br>
  <Link @href={{href-to "password-recovery"}}>
    {{t "components.login.forgot"}}
  </Link>
  </div>

  <div class="login-item">
  <img class="login-header" src="imagenes/session/login.png" />
    <h3> {{t "components.login.dontHaveUser"}} </h3>
    <Link @href={{href-to "register"}}>
      {{t "components.login.register"}}
    </Link>
  </div>
</div>
