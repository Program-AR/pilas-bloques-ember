<Toggle @element-id="turbo-button" @glow={{true}} @isChecked={{this.turboMode}} @onToggle={{action 'updateTurboMode'}} @tooltip={{if this.turboMode (t "components.turboModeToggle.turnOff") (t "components.turboModeToggle.turnOn")}}>
    <FaIcon @icon="bolt" class="turbo-mode-icon"/>
</Toggle>

<Toast @message={{"Modo Turbo"}} @needShowToast={{this.needShowTurboModeIndicator}}>
    {{if this.turboMode (t "components.turboModeToggle.active") (t "components.turboModeToggle.inactive")}}
</Toast>