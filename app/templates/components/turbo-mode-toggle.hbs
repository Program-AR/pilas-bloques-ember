<Toggle @element-id="turbo-button" @glow={{true}} @isChecked={{turboMode}} @onToggle={{action 'updateTurboMode'}} @tooltip={{if turboMode (t "components.turboModeToggle.turnOff") (t "components.turboModeToggle.turnOn")}}>
    <i class="slider-icon fa fa-bolt"></i>
</Toggle>

<Toast @message={{"Modo Turbo"}} @needShowToast={{needShowTurboModeIndicator}}>
    {{if turboMode (t "components.turboModeToggle.active") (t "components.turboModeToggle.inactive")}}
</Toast>