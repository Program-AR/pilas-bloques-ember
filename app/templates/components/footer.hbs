<RPaperCard class="footer-card flex footer">
  {{#if this.cargando}}
  <Spinner />
  {{else}}
  <div class="layout-row flex-grow">
    <a class="program-ar-logo" href="http://program.ar" />
    <p class="app-version"><code>{{t "components.footer.version"}}</code></p>{{version class="app-version"}}
    <span class="flex"></span>
    <RPaperButton @onClick={{action this.openReportAProblemModel}} @disabled={{false}} @raised={{false}} @fab={{false}}
      @bubbles={{true}}><RPaperIcon @iconName="help" class="menu-button-icon"/><span class="menu-button-typography">{{t "components.footer.problem"}}</span></RPaperButton>
    <RPaperButton @disabled={{false}} @raised={{false}} @fab={{false}} @bubbles={{true}} @href={{href-to "acercade" }}>
      <RPaperIcon @iconName="info" class="menu-button-icon"/><span class="menu-button-typography">{{t "components.footer.about"}}</span></RPaperButton>
  </div>
  {{/if}}
</RPaperCard>